@require 'includes/variables'

/*
sponsors
====================================================================== */

.sponsors {
    text-align: center;
}

.sponsors_title {
    margin: ($grid-gutter-width * 2) 0 $grid-gutter-width 0;
}

.sponsor {
    display: inline-block;
    max-width: 250px;
    margin: 0 $grid-gutter-width $grid-gutter-width;
}


@media $media-query-tall {
    .sponsors_title {
        margin: ($grid-gutter-width-wide * 2) 0 $grid-gutter-width-wide 0;
    }
    .sponsor {
        margin: 0 $grid-gutter-width-wide $grid-gutter-width-wide;
    }
}
