@require '../includes/variables';

/*
button
====================================================================== */

.button {
    display: inline-block;
    box-sizing: border-box;
    min-width: $input-min-width;
    border: $input-border-width solid transparent;
    padding: $input-v-padding $input-h-padding;
    background: transparent;
    font-size: inherit;
    line-height: 1; // to match elements/forms.styl
    text-align: center;
    text-decoration: none;
    text-shadow: none; /* over-ride text shadow in .hero */
    transition: all $transition-duration $transition-timing;

    theme({
        border-color: $theme-buttons
        color: $theme-buttons
        text-decoration: none
    })

    &:hover,
    &:focus,
    &:active {
        transform: scale(1.05);
        theme({
            background-color: $theme-background
        })
    }

    &::after{
        content: '\A\BB';
    }

    .split & {
        font-weight: bold;
    }
}

.button-invert {

    &,
    &:hover,
    &:focus,
    &:active {
        theme({
            border-color: transparent
            background-color: $theme-buttons
            color: #fff
        })
    }
}

.button-bright {

    &,
    &:hover,
    &:focus,
    &:active {
        theme({
            border-color: transparent
            background-color: #fff
            color: $theme-dark
        })
    }
}
