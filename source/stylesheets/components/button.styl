@require '../includes/variables';

/*
button
====================================================================== */

.button {
    display: inline-block;
    box-sizing: border-box;
    min-width: $input-min-width;
    border: $input-border-width solid transparent;
    padding: $input-v-padding $input-h-padding;
    border-color: $berlin-secondary;
    background: transparent;
    color: $berlin-secondary;
    font-size: inherit;
    line-height: 1; // to match elements/forms.styl
    text-align: center;
    text-decoration: none;
    text-shadow: none; /* over-ride text shadow in .hero */
    transition: all $transition-duration $transition-timing;

    &:hover,
    &:focus,
    &:active {
        background-color: $berlin-background;
        transform: scale(1.05);
    }

    &::after{
        content: '\A\BB';
    }

    .split & {
        font-weight: bold;
    }
}

.button-invert {

    &,
    &:hover,
    &:focus,
    &:active {
        border-color: transparent;
        background-color: $berlin-secondary;
        color: $berlin-background;
    }
}

.button-bright {

    &,
    &:hover,
    &:focus,
    &:active {
        border-color: transparent
        background-color: $berlin-background
        color: $berlin-dark;
    }
}

.button-expand {
    position: relative;
    padding-right: 3rem;

    &::after {
        content: '\A+';
        position: absolute;
        top: 50%;
        right: 1rem;
        margin-top: -1rem;
        set-font-size(28px);
    }
    &[aria-expanded=true]::after {
        content: '\A-';
    }
}
