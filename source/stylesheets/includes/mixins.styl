a11y-hidden() {
    position: absolute !important;
    height: 1px;
    width: 1px;
    margin: -1px;
    overflow: hidden;
    clip: rect(0 0 0 0);
    padding: 0;
    border: 0;
}

/*
====================================================================== */
clearfix() {
    &:after {
        content: "";
        display: table;
        clear: both;
    }
}

/*
====================================================================== */
cols-wide($cols) {
    $width = $cols / $grid-column-total * 100;
    if($width > 100) {
        $width = 100;
    }
    $width = unit($width, unquote('%'));
    $width = round($width, 3);
    return $width;
}


grid-max($gutter-width) {
    return 120px * $grid-column-total + $gutter-width * ($grid-column-total - 1);
}

