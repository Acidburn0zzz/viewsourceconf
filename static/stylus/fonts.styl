// Declare webfonts.

// Moon Bold
@font-face {
    font-family: 'Moon';
    src: local('Moon Bold'), url('/static/fonts/moon_bold-webfont.woff2') format('woff2'), url('/static/fonts/moon_bold-webfont.woff') format('woff'), url('/static/fonts/moon_bold-webfont.ttf') format('truetype');
    font-weight: bold;
    font-style: normal;
}

// Moon Light
@font-face {
    font-family: 'Moon Light';
    src: local('Moon Light'), url('/static/fonts/moon_light-webfont.woff2') format('woff2'), url('/static/fonts/moon_light-webfont.woff') format('woff'), url('/static/fonts/moon_light-webfont.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
}

// Montserrat Regular
@font-face {
    font-family: 'Montserrat Light';
    src: local('Montserrat Light'), url('/static/fonts/montserrat-light-webfont.woff2') format('woff2'), url('/static/fonts/montserrat-light-webfont.woff') format('woff'), url('/static/fonts/montserrat-light-webfont.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
}

// Montserrat Bold
@font-face {
    font-family: 'Montserrat Light';
    src: local('Montserrat Regular'), url('/static/fonts/montserrat-regular-webfont.woff2') format('woff2'), url('/static/fonts/montserrat-regular-webfont.woff') format('woff'), url('/static/fonts/montserrat-regular-webfont.ttf') format('truetype');
    font-weight: bold;
    font-style: normal;
}

