.icon
	bg('../images/icon.png', no-repeat center center \/ contain)
	display: inline-block
	width: 5.5rem
	height: 3.7rem
	position: relative
	&:after
		content: ' '
		absolute: top 0 left 0
		width: 100%
		height: 100%
	&.twitter:after
		bg('../images/icon_twitter.png', no-repeat center center)
	&.signup:after
		bg('../images/icon_signup.png', no-repeat center center)